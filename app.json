{
    "id": "org.telegram.api.bot",
    "name": {
        "en": "Telegram Bot",
        "nl": "Telegram bot"
    },
    "version": "0.1.6",
    "compatibility": ">=0.8.34",
	"description": {
    	"en": "Control Homey by chatting with our Telegram bot",
		"nl": "Beheer Homey door berichten te sturen naar onze Telegram bot"
  	},
  	"author": {
    	"name": "Chamid Media",
		"email": "info@chamidmedia.nl"
  	},
  	"images": {
	  	"small": "assets/images/small.png",
	  	"large": "assets/images/large.png"
  	},
  	"permissions": [
	  	"homey:manager:speech-output",
	  	"homey:manager:speech-input",
	  	"homey:app:com.synology.surveillance"
  	],
  	"speech": [
  	],
  	"category": "internet",
	"flow": {
		"triggers": [
	      {
	        "id": "incomingmessage",
	        "title": {
	          "en": "A message was received",
	          "nl": "Een bericht werd ontvangen"
	        },
	        "tokens": [
	            {
	                "name": "message",
	                "title": {
	                    "en": "text",
	                    "nl": "tekst"
	                }
	            }
	        ]
	      }
	    ],
	    "actions": [
        {
            "id": "sendmessage",
            "title": {
                "en": "Send a message",
                "nl": "Stuur een bericht"
            },
            "args": [
	              {
		              "name": "text",
		              "type": "text",
		              "placeholder": {
			              "en": "Message",
			              "nl": "Bericht"
		              }
	              },
	              {
		              "name": "to",
		              "type": "number",
		              "placeholder": {
			              "en": "To ID",
			              "nl": "Aan ID"
		              }
	              }
	        ]
        },
        {
            "id": "sendimage",
            "title": {
                "en": "Send a picture",
                "nl": "Stuur een afbeelding"
            },
            "args": [
	              {
		              "name": "text",
		              "type": "text",
		              "placeholder": {
			              "en": "Picture token",
			              "nl": "Afbeelding token"
		              }
	              }
	        ]
        }
       ]
	}
}